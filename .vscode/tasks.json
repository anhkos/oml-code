    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build oml",
            "command": "npm run langium:generate && npm run build",
            "windows": {
                "command": "npm run langium:generate; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; npm run build"
            },
            "linux": {
                "command": "npm run langium:generate && npm run build"
            },
            "osx": {
                "command": "npm run langium:generate && npm run build"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Langium: Generate grammar and build the oml language",
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "server-process"
            }
        }
    ]
}
