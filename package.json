{
    "name": "oml-workspace",
    "description": "Base workspace package",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "npm run clean --workspaces",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
        "build:clean": "npm run clean && npm run build",
        "langium:generate": "npm run --workspace packages/language langium:generate",
        "langium:watch": "npm run --workspace packages/language langium:watch",
        "test": "npm run --workspace packages/language test"
    },
    "devDependencies": {
        "@types/node": "~20.17.48",
        "shx": "~0.4.0",
        "typescript": "~5.8.3"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    },
    "workspaces": [
        "packages/language",
        "packages/cli",
        "packages/extension"
    ],
    "dependencies": {
        "langium-ai-mcp": "file:../langium-ai/packages/langium-ai-mcp",
        "langium-ai-tools": "file:../langium-ai/packages/langium-ai-tools",
        "vscode-jsonrpc": "^8.2.1",
        "vscode-languageserver": "^9.0.1",
        "zod": "^4.1.13",
        "zod-to-json-schema": "^3.25.0"
    }
}
